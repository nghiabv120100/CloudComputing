@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<StudentModel>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">Student Manager</a>.</p>
    <h1 class="display-4">Student Manager</h1>
    <p></p>
    <br />
    <div style="float:left">
        <input type="button" class="btn btn-warning"
               value="All student"
               onclick="location.href='@Url.Action("Index", "Home", new { orderBy = 0 })'" />
        @*<input type="button" class="btn btn-info"
               value="Arrange by Total Score"
               onclick="location.href='@Url.Action("Index","Home", new {orderBy=1 })'" />
        <input type="button" class="btn btn-outline-dark"
               value="Arrage by Academic school"
               onclick="location.href='@Url.Action("Index","Home", new {orderBy=2 })'" />*@
    </div>
    <p>
        <br />
        <br />
        @if (Model?.Count() > 0)
        {
            <table class="table table-bordered table-hover table-bordered">
                <tr class="table-info">
                    <th>MSSV</th>
                    <th>Họ Tên </th>
                    <th> Lớp</th>
                    <th>Giới tính </th>
                    <th>GPA</th>
                 

                </tr>
                @foreach (var item in Model)
                {
                    <tr class="table-light table-bordered">
                        <td>@item.mssv</td>
                        <td>@item.fullname</td>
                        <td>@item.classname</td>
                        <td>@item.sex</td>
                        <td>@item.gpa</td>
                   
                       

                        }


                        <td>
          
                            @Html.ActionLink("Edit", "GetEditStudent", new { id = item.mssv })
                            |
                    
                            @Html.ActionLink("Detail", "DetailStudent", new { id = item.mssv })
                        </td>
                    </tr>
                }
            </table>}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
       
</div>
