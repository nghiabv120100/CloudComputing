@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<StudentManagement.Models.Student>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StudentList</title>
</head>
<body>
    <p>
        <a asp-action="AddStudent">Add Student</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Student ID</th>
                <th scope="col">Full Name</th>
                <th scope="col">Class</th>
                <th scope="col">Gender</th>
                <th scope="col">GPA</th>
                <th scope="col"></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                    @foreach (var sv in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => sv.mssv)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => sv.fullname)
                            </td>
     
                            <td>
                                @Html.DisplayFor(modelItem => sv.classname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => sv.sex)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => sv.gpa)
                            </td>
                            <td>
                                <a asp-controller="Student" asp-action="EditStudent" asp-route-id="@sv.mssv" class="btn btn-danger">Edit</a>
                                <a asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@sv.mssv"  class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')";>Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
    </table>
</body>
</html>

